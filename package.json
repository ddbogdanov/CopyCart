{
  "name": "copy-cart",
  "productName": "Copy Cart",
  "description": "Copy files using order import",
  "private": true,
  "version": "1.3.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:renderer": "vite build",
    "build": "npm run build:electron && npm run build:renderer",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make"
  },
  "main": "electron/main.ts",
  "dependencies": {
    "@primeuix/themes": "^1.2.5",
    "csv-parser": "^3.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "primeicons": "^7.0.0",
    "primevue": "^4.4.0",
    "update-electron-app": "^3.1.1",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.0",
    "@electron-forge/maker-deb": "^7.10.0",
    "@electron-forge/maker-rpm": "^7.10.0",
    "@electron-forge/maker-squirrel": "^7.10.0",
    "@electron-forge/maker-zip": "^7.10.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.0",
    "@electron-forge/plugin-fuses": "^7.10.0",
    "@electron/fuses": "^1.8.0",
    "@types/node": "^24.6.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "concurrently": "^9.2.1",
    "electron": "^38.2.1",
    "electron-log": "^5.4.3",
    "sass": "^1.93.2",
    "sass-loader": "^16.0.5",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vue-tsc": "^3.1.0",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.ddbogdanov.copycart",
    "productName": "Copy Cart",
    "icon": "build/icon",
    "win": {
      "target": [
        "nsis",
        "squirrel"
      ],
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ddbogdanov/CopyCart.git"
  }
}
